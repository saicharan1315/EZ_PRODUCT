def rateofintrest(amount):
    rateofintrest=amount/100
    return rateofintrest;
amount=100000
b=amount=25000
new=b+10000
print(new+(rateofintrest(amount)*4)+(rateofintrest(new)*4)+(rateofintrest(new)*12))
